<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gatherfriends.gather.NewShindigWizard.NameDateTimeFragment"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/new_events_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="45dp"
            android:gravity="center"
            android:text="@string/new_events_title"
            android:layout_marginBottom="@dimen/event_title_padding"
            />
        <EditText
            android:id="@+id/new_event_name"
            android:layout_height="30dp"
            android:layout_width="fill_parent"
            android:layout_marginBottom="@dimen/event_item_spacing"
            />
        <TimePicker
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/event_item_spacing"/>

        <CalendarView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/event_item_spacing"/>
     </LinearLayout>

</LinearLayout>
